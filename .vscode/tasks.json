{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build --all-features",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cargo run",
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test --all-features",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
